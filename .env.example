# Production Environment Configuration
# Copy this file to .env and update the values

# Application Settings
APP_NAME=KAI
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=kai
DB_USERNAME=kai
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# Authentication
# Set a strong email and password for the admin user
AUTH_EMAIL=admin@your-domain.com
AUTH_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# API Token - Generate a secure random token
# Example: openssl rand -hex 32
API_SHARED_TOKEN=CHANGE_THIS_TO_SECURE_RANDOM_TOKEN

# Optional: Logging
# LOG_LEVEL=error
# LOG_FILE=/var/log/kai/app.log